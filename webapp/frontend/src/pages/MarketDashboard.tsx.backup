                  </Typography>
                  <Box sx={{ height: 400 }}>
                    <Plot
                      data={[
                        {
                          x: activityByDay.x,
                          y: activityByDay.y,
                          type: 'scatter',
                          mode: 'lines',
                          fill: 'tozeroy',
                          line: { shape: 'spline', color: '#8b5cf6' },
                          fillcolor: 'rgba(139, 92, 246, 0.2)',
                          name: 'New Listings',
                          hovertemplate: '<b>%{x}</b><br>Listings: %{y}<extra></extra>',
                        },
                      ]}
                      layout={{
                        xaxis: {
