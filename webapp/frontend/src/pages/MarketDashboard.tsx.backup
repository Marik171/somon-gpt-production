              <Card>
                <CardContent>
                  <Typography variant="h6" sx={{ mb: 2, fontWeight: 600 }}>
                    Market Segments Analysis
                  </Typography>
                  <Box sx={{ height: 400 }}>
                    <Plot
                      data={[
                        {
                          type: 'treemap',
                          labels: marketSegmentData.labels,
